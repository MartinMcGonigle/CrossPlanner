@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse justify-content-between">



<nav class="navbar">
    <ul class="navbar-nav me-auto">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">Hello @User.Identity.Name!</a>
            </li>
            @if (User.IsInRole("SuperUser"))
            {
                <li>
                    <a class="nav-link text-dark" asp-controller="Staff" asp-action="Index">Staff</a>
                </li>
                
                <li>
                    <a class="nav-link text-dark" asp-controller="Member" asp-action="Index">Members</a>
                </li>
            }
            <li class="nav-item">
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Content("~/")" class="form-inline">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
</nav>
</div>