@model IEnumerable<MembershipPlan>
@{
    ViewData["Title"] = "Membership Plans";
}

@if (Model.Count() > 0)
{
    <div class="card bg-light mb-3">
        <div class="card-body">
            <div role="search">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <partial name="PropertyDetailsTableSearch" />
                    </div>
                </div>

                <div class="float-right">
                    <a class="btn btn-secondary" asp-action="Create"><i class="fas fa-circle-plus" aria-hidden="true"></i> Create Membership Plan</a>
                </div>
            </div>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>

                <th>
                    Price
                </th>

                <th>
                    Description
                </th>

                <th>
                    Active
                </th>

                <th>
                    Type
                </th>

                <th>
                    Number of Classes
                </th>

                <th>
                    Number of Months
                </th>

                <th>

                </th>

            </tr>
        </thead>

        <tbody id="property-details-table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>

                    <td>
                        @(string.Format("{0:N2}", item.Price))
                    </td>

                    <td>
                        @item.Description
                    </td>

                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>

                    <td>
                        @(Enum.GetName(typeof(MembershipType), item.Type))
                    </td>

                    <td>
                        @item.NumberOfClasses
                    </td>

                    <td>
                        @item.NumberOfMonths
                    </td>

                    <td>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdown-@item.MembershipPlanId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>

                            <div class="dropdown-menu" aria-labelledby="dropdown-@item.MembershipPlanId">

                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-info" id="no-results" style="display: none;">
        No membership plans found. Please adjust your search criteria.
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        There are no membership plans to display. Please try again after some time.
    </div>

    <div class="float-right">
        <a class="btn btn-secondary" asp-action="Create"><i class="fas fa-circle-plus" aria-hidden="true"></i> Create Membership Plan</a>
    </div>
}

@section Scripts {
    <script src="~/js/propertyDetailsTableSearch.js"></script>
}