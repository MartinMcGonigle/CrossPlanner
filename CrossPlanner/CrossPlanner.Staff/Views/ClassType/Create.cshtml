@model ClassType
@{
    ViewData["Title"] = "Create Class Type";
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back</a>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-5">
        <section>
            <form id="classType" method="post">
                <div class="card bg-light">
                    <div class="card-body">
                        <h3>Create class type</h3>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Title" id="title" class="form-control" aria-required="true" />
                            <label asp-for="Title" class="form-label">Title <span class="required">*</span></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-1">
                            <button id="class-type-submit" type="submit" class="w-100 btn btn-lg btn-green"><i class="fa fa-file" aria-hidden="true"></i> Create Class Type</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/classType.js"></script>
}