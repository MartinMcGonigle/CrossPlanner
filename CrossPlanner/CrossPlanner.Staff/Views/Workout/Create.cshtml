@model WorkoutViewModel
@{
    ViewData["Title"] = "Create Workout";
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back</a>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-5">
        <section>
            <form id="workout" method="post">
                <div class="card bg-light">
                    <div class="card-body">
                        <h3>Create workout</h3>
                        <hr />
                        
                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Workout.Description" id="description" class="form-control"></textarea>
                            <label asp-for="Workout.Description" class="form-label">Description <span class="required">*</span></label>
                            <span asp-validation-for="Workout.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Workout.ClassTypeId" id="class-type-id" class="form-control" aria-required="true">
                                <option disabled selected value="">-- Select Class Type --</option>
                                @foreach (var classType in Model.ClassTypes)
                                {  
                                    <option value="@classType.ClassTypeId">@classType.Title</option>
                                }
                            </select>
                            <label asp-for="Workout.ClassTypeId" class="form-label">Class Type <span class="required">*</span></label>
                            <span asp-validation-for="Workout.ClassTypeId" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Workout.Date" id="workout-date" type="date" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                            <label asp-for="Workout.Date" class="form-label">Workout Date <span class="required">*</span></label>
                            <span asp-validation-for="Workout.Date" class="text-danger"></span>
                        </div>

                        <div class="mb-1">
                            <button id="workout-submit" type="submit" class="w-100 btn btn-lg btn-green" disabled><i class="fa fa-file" aria-hidden="true"></i> Create Workout</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/workout.js"></script>
    <script src="https://cdn.tiny.cloud/1/xw8xkoojtvykcvro8yxpp136emxqubkscfbkpn8if4fqeeux/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
}