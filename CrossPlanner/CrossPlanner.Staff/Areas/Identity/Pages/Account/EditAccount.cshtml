@page
@model CrossPlanner.Staff.Areas.Identity.Pages.Account.EditAccountModel
@{
    ViewData["Title"] = "Edit Account";
    var today = DateTime.Now.ToString("yyyy-MM-dd");
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" asp-controller="@Model.ReturnController" class="btn btn-sm btn-secondary"><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back</a>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-5">
        <section>
            <form id="createForm" asp-route-returnUrl="@Model.ReturnUrl" asp-route-returnController="@Model.ReturnController" method="post">
                <div class="card bg-light">
                    <div class="card-body">
                        <h3>Edit account</h3>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="Input.ApplicationUserId" type="hidden" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" id="first-name" class="form-control" aria-required="true" />
                            <label asp-for="Input.FirstName" class="form-label">First Name <span class="required">*</span></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" id="last-name" class="form-control" aria-required="true" />
                            <label asp-for="Input.LastName" class="form-label">Last Name <span class="required">*</span></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="date" asp-for="Input.DateOfBirth" id="date-of-birth" class="form-control" aria-required="true" max="@today" />
                            <label asp-for="Input.DateOfBirth" class="form-label">Date Of Birth <span class="required">*</span></label>
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" id="email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label">Email <span class="required">*</span></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Input.Role" id="role" class="form-control" aria-required="true">
                                <option disabled selected value="">-- Select user role --</option>
                                @foreach (var userRole in (IEnumerable<IdentityRole>)ViewData["roles"])
                                {
                                    <option value="@userRole.Name">@userRole.Name</option>
                                }
                            </select>
                            <label asp-for="Input.Role" class="form-label">Role <span class="required">*</span></label>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <div class="mb-1">
                            <button id="create-submit" type="submit" class="w-100 btn btn-lg btn-green" disabled><i class="fa fa-save" aria-hidden="true"></i> Update User</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/createAccount.js"></script>
}