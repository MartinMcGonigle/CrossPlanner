@model ScheduledClassDetail

<div class="modal fade" id="cancelReasonModal-@Model.ScheduledClassId" tabindex="-1" aria-labelledby="cancelReasonModalLabel-@Model.ScheduledClassId" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelReasonModalLabel-@Model.ScheduledClassId">Cancellation Reason</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>

            <div class="modal-body">
                @Model.CancellationReason
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>