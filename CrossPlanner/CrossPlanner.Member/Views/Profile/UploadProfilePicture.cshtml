@model UploadProfilePictureViewModel
@{
    ViewData["Title"] = "Upload Profile Picture";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 offset-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
            {
                <img src="@Model.CurrentProfilePictureUrl" class="img-fluid rounded-circle mb-3 profile-picture" alt="Profile Picture" />
            }
            else
            {
                <img src="~/images/default-profile.png" class="img-fluid rounded-circle mb-3 profile-picture" alt="Default Profile Picture" />
            }

            <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
                <div class="card bg-light">
                    <div class="card-body">
                        <h3>Upload Profile Picture</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input type="hidden" asp-for="ApplicationUserId" />

                        <div class="form-floating mb-3">
                            <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*" required />
                            <label for="profilePicture" class="form-label">Select a new profile picture <span class="required">*</span></label>
                        </div>

                        <div class="mb-1">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Upload Picture</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>

                    </div>
                </div>





            </form>
        </div>
    </div>
</div>