@model Membership
@{
    ViewData["Title"] = "Membership Details";
    Layout = "~/Views/Shared/_PurchaseLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-12">
        <section>
            <form asp-action="MembershipDetails" method="post">
                <div class="card bg-light">
                    <div class="card-body">
                        <h3>@ViewData["HeaderType"]</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <input type="hidden" asp-for="MembershipId" />

                        <div class="mb-3">
                            <label asp-for="AutoRenew" class="form-label">Auto-renew Membership? <span class="required">*</span></label>

                            <div class="form-check">
                                @if (Model.AutoRenew)
                                {
                                    <input asp-for="AutoRenew" class="form-check-input" type="radio" value="true" id="autoRenewYes" checked />
                                }
                                else
                                {
                                    <input asp-for="AutoRenew" class="form-check-input" type="radio" value="true" id="autoRenewYes" />
                                }
                                
                                <label class="form-check-label" for="autoRenewYes">
                                    Yes, auto-renew
                                </label>
                            </div>

                            <div class="form-check">
                                @if (!Model.AutoRenew)
                                {
                                    <input asp-for="AutoRenew" class="form-check-input" type="radio" value="false" id="autoRenewNo" checked />
                                }
                                else
                                {
                                    <input asp-for="AutoRenew" class="form-check-input" type="radio" value="false" id="autoRenewNo" />
                                }
                                
                                <label class="form-check-label" for="autoRenewNo">
                                    No, do not auto-renew
                                </label>
                            </div>
                        </div>

                        <div class="mb-1">
                            <button type="submit" class="w-100 btn btn-green"><i class="far fa-save" aria-hidden="true"></i> Save & Continue</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Progress {
    @{
        await Html.RenderPartialAsync("_Progress");
    }
}

@section Menu {
    @{
        await Html.RenderPartialAsync("_Menu");
    }
}